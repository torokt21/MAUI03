<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI03.PetDetailsPage"
             Title="PetDetails">
    <VerticalStackLayout>
        <Label Text="Heyo"/>
        <Label 
            Text="{Binding Pet.Name, StringFormat='Name {0}'}"/>
        <Label 
            Text="{Binding Pet.Species, StringFormat='Species {0}'}"/>
        <Label 
            Text="{Binding Pet.BirthDate, StringFormat='Date of birth {0}'}"/>
    </VerticalStackLayout>
</ContentPage>